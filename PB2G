 └─ script.jsconst products = [
  { id: 1, name: "Black Minimal Tee", price: "25,000 MMK", color: "black" },
  { id: 2, name: "White Clean Tee", price: "25,000 MMK", color: "white" },
  { id: 3, name: "Gray Urban Tee", price: "27,000 MMK", color: "gray" },
  { id: 4, name: "Black Premium Tee", price: "30,000 MMK", color: "black" }
];

const productContainer = document.getElementById("products");
let selectedProduct = null;

function displayProducts(list) {
  productContainer.innerHTML = "";
  list.forEach(p => {
    productContainer.innerHTML += `
      <div class="card">
        <img src="" alt="${p.name}">
        <h3>${p.name}</h3>
        <p>${p.price}</p>
        <button onclick="openOrder(${p.id})">Order</button>
      </div>
    `;
  });
}

function filterProducts(color) {
  if (color === "all") {
    displayProducts(products);
  } else {
    displayProducts(products.filter(p => p.color === color));
  }
}

function openOrder(id) {
  selectedProduct = products.find(p => p.id === id);
  document.getElementById("productName").innerText = selectedProduct.name;
  document.getElementById("productPrice").innerText = selectedProduct.price;
  document.getElementById("orderModal").style.display = "block";
}

function closeOrder() {
  document.getElementById("orderModal").style.display = "none";
}

function submitOrder() {
  const name = document.getElementById("customerName").value;
  const phone = document.getElementById("phone").value;
  const size = document.getElementById("size").value;

  if (!name || !phone || !size) {
    alert("Please fill all fields");
    return;
  }

  const message =
    `Order Request%0A` +
    `Product: ${selectedProduct.name}%0A` +
    `Price: ${selectedProduct.price}%0A` +
    `Size: ${size}%0A` +
    `Name: ${name}%0A` +
    `Phone: ${phone}`;

  window.open(`https://m.me/YOUR_PAGE_USERNAME?text=${message}`, "_blank");
}

displayProducts(products);
